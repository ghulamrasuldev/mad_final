                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date: 01/01/2022"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
