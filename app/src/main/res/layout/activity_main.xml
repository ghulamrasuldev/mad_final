                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="History of Pakistan One"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
